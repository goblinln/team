{
    "compilerOptions": {
        "target": "es5",
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        "noEmitOnError": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "lib": [
            "dom",
            "es2015",
        ]
    },
    "include": [
        "src/*",
        "src/**/*",
    ],
    "exclude": [
        "node_modules"
    ]
}